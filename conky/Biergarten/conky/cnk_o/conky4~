${if_match "$mpd_status" == "Playing"}${color3}${mpd_bar 2, 814}
${color1}${font GE Inspira:bold:size=9}${offset 19} $mpd_artist - $mpd_title - $mpd_album $alignr${mpd_elapsed}/${mpd_length}  $else${if_match "$mpd_status" == "Paused"}${color3}${mpd_bar 2, 814}
${color1}${font GE Inspira:bold:size=9}${offset 19} $mpd_artist - $mpd_title - $mpd_album $alignr${mpd_elapsed}/${mpd_length}  $else${color3}${battery_bar 2, 814 BAT0}
${offset 739}${font GE Inspira:bold:size=9}${color1}BAT$alignr${color1}${battery_percent BAT0}%  $endif$endif
